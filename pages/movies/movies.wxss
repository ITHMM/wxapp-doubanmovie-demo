.movies {
    height: 100%;
    background: #eee;
    padding: 10rpx;
}

.page-title {
    color: #111;
    font-size: 30rpx;
    line-height: 60rpx;
    height: 60rpx;
}
.page-main {
}

.box {
    display: flex;
    flex-direction: row;
}

.info {
    padding-left: 9rpx;
}
.info .title {
    font-size: 40rpx;
    line-height: 70rpx;
}
.info .others {
    color: #aaa;
    font-size: 30rpx;
    line-height: 50rpx;
}
.info .others .line {
    display: flex;
    align-items: center;
}
.info .others .ellipsis {
    max-width: 400rpx;
    display: inline-block;
}

image {
    width: 200rpx;
    height: 300rpx;
    border-radius: 20rpx;
    border: #bbb solid 5rpx;
}